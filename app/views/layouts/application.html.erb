<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Raleway|Roboto+Slab&display=swap" rel="stylesheet">

    <meta name="keywords" content= "<%= @seo_keywords %>" />

    <%= favicon %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%#= fa_icon "fa-blog" %>
    <!-- <i class="fas fa-blog"></i> -->
  </head>

    <body>
     <div class="site-wrapper">
       <div class="site-wrapper-inner">
         <div class="cover-container">

          <%= video_tag(
               'HardDrivePhotojpeg.mp4',
               id: 'background',
               autoplay: false,
               loop: true,
               muted: true,
               poster: 'home_bg.png'
          ) 
          %>

           <%= render 'shared/application_nav' %>

           <%= yield %>

           <%= render 'shared/application_footer' %>

           <%= alerts %>
  
           <%#= source_helper("application") %>

       </div>
      </div>
    </div>
  </body>
</html>
